<h1> Registrar pedido </h1>


<% if(@order.errors.any?) %>
  <p>Verifique os erros abaixo:</p>
  <ul>
    <% @order.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
      <% end %>
  </ul>
<% end %>





<%= form_with(model: @order) do |f| %>
<div>
  <%= f.label :warehouse_id %>
  <%= f.collection_select :warehouse_id,@warehouses, :id, :full_description %>
</div>
<div>
  <%= f.label :supplier_id %>
  <%= f.collection_select :supplier_id, @suppliers, :id, :company_name %>
</div>
<div>
  <%= f.label :deadline_delivery %>
  <%= f.date_field :deadline_delivery %>
</div>
<%= f.submit 'Criar pedido' %>

<% end %>