<section id ="warehouses">
  <h2>Galpões</h2>
    <div>
      <%= link_to('Cadastrar novo galpão', new_warehouse_path) %>
    </div>
    <% @warehouses.each do |w|  %>
    <div>
      <h1><%= link_to(w.name, warehouse_path(w.id)) %> </h1>
      <dl>  
        <dt><strong>Código:</strong></dt>
        <dd> <%= w.code %> </dd>
        <dt><strong>Cidade:</strong></dt> 
        <dd><%= w.city %> </dd>
        <dt><strong>Área:</strong></dt>
        <dd><%= w.area %> m² </dd>
        </dl>
<% end %>
</div>
<% if @warehouses.empty? %>
  <p>Não existem galpões cadastrados</p>
<% end  %>

</section>