<section id ="warehouses">
  <h2>Galpões</h2>
    <div>
      <%= link_to('Cadastrar novo galpão', new_warehouse_path) %>
    </div>
    <% @warehouses.each do |w|  %>
    <div>
      <h3><%= link_to(w.name, warehouse_path(w.id)) %> <h3>
      <dl>
        <dt>Código:  </dt>
        <dd> <%= w.code %> </dd>
        <dt> Cidade: </dt> 
        <dd><%= w.city %> </dd>
        <dt>Área: </dt>
        <dd><%= w.area %> m² </dd>
        </dl>
<% end %>
</div>
<% if @warehouses.empty? %>
  <p>Não existem galpões cadastrados</p>
<% end  %>

</section>